<header class="header-area">
  <div class="container">
      <div class="header-inner">
          <div class="row align-items-center">
              <div class="header-left">
                  <div class="toggle-menu">
                      <i class="fa fa-bars"></i>
                  </div>
                  <nav class="header-menu">
                      <ul class="site-nav d-flex flex-wrap align-items-center">
                        {% for link in section.settings.header_left_menu.links %}
                          {% if link.links != blank %}
                              <li class="{% if link.links != blank %}menu-dropdown{% endif %}">
                                  <a href="{{ link.url }}" class="header-menu__link">{{ link.title }}</a>
                                    <div class="sub-menu">
                                        <ul>
                                            {% for childlink in link.links %}
                                                <li><a href="{{ child.link }}">{{ childlink.title }}</a></li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                              </li>
                          {% else %}
                          <li>
                            <a href="{{ link.url }}" class="header-menu__link">{{ link.title }}</a>
                          </li>
                          {% endif %}
                        {% endfor %}
                      </ul>
                  </nav>
              </div>
              <div class="header-mid">
                  <div class="header-logo">
                      <a href="{{ shop.url }}" class="d-block">

                        {% if section.settings.logo %}
                          <img src="{{ section.settings.logo | img_url: 'medium' }}" alt="{{ section.settings.alt }}">
                        {% else %}
                          <h1>DREXEL</h1>
                        {% endif %}

                      </a>
                  </div>
              </div>
              <div class="header-right">
                  <div class="header-custom-link d-flex align-items-center justify-content-end">
                      <div class="header-link d-flex align-items-center">
                          <div class="header-currency">
                              <div class="header-currency__dropdown">
                                  <ul>
                                      <li>USD</li>
                                      <!-- <li>UER</li> -->
                                  </ul>
                              </div>
                          </div>
                          <div class="header-login">
                              <a href="#" class="d-inline-block header-login--text">Login</a>
                              <!-- mobile login -->
                              <div class="header-login__mobile p-0">
                                  <i class="fa fa-user"></i>
                              </div>
                          </div>
                          <div class="header-wishlist">
                              <a href="#" class="d-inline-block">
                                  <i class="fa fa-heart"></i>
                              </a>
                          </div>
                      </div>
                      <div class="header-cart">
                          <a href="#" class="d-inline-block header-cart--link">
                              <span class="header-cart__text">Cart</span>
                              <span class="header-cart__count">
                                  <em>(</em>
                                  0
                                  <em>)</em>
                              </span>
                          </a>
                          <!-- mobile cart -->
                          <a href="#" class="header-cart__mobile">
                              <span class="header-cart-icon"><i class="fa fa-shopping-cart"></i></span>
                              <span class="cart-count">0</span>
                          </a>
                          <!-- dropdown cart -->
                          <div class="dropdown-cart">
                              <div class="dropdown-cart__empty">
                                  <p class="m-0">You have no items in your shopping cart.</p>
                              </div>
                              <div class="dropdown-mini-cart">
                                  <ul class="cart-list">
                                      <li class="d-flex">
                                          <a href="#" class="product-image">
                                              <img src="./assets/images/mini-cart-prod.jpg" alt="">
                                          </a>
                                          <div class="product-inner">
                                              <p class="product-name m-0">
                                                  <a href="#" class="text-secondary text-uppercase text-fs-xxss font-medium text-hover-white">Dellentesque convallis</a>
                                              </p>
                                              <div class="cart-collateral ps-0">
                                                  <span class="price">
                                                      <span class="money text-fs-xxs">$250.00</span>
                                                  </span> x 1
                                              </div>
                                          </div>
                                          <a href="javascript:void(0)" title="Remove This Item" class="btn-remove text-secondary text-hover-white">
                                              <i class="fa fa-trash" aria-hidden="true"></i>
                                          </a>
                                      </li>
                                  </ul>
                                  <div class="summary px-0">                
                                      <p class="total d-flex justify-content-between align-items-center text-white">
                                        <span>Total:</span>
                                        <span class="price"><span class="money">$250.00</span></span> 
                                      </p>
                                  </div>
                                  <div class="actions ps-0 d-flex justify-content-around">
                                      <a class="btn text-white text-fs-xxs text-uppercase bg-hover-secondary" href="/cart">View Cart</a>
                                      <a class="btn text-white text-fs-xxs text-uppercase bg-hover-secondary" href="/checkout">Checkout</a>
                                  </div>
                              </div>
                          </div>
                      </div>
                      <div class="header-search">
                          <i class="fa fa-search"></i>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Header Logo"
    },
    {
      "type": "text",
      "id": "alt",
      "label": "Image Alt Text"
    },
    {
      "type": "link_list",
      "id": "header_left_menu",
      "label": "Header Left Menu"
    }
  ],
  "blocks": [
    {
      "name": "MegaMenu",
      "type": "megamenu",
      "limit": 3,
      "settings": [
        {
          "type": "link_list",
          "id": "mega_cat",
          "label": "Categories"
        }
      ]
    }
  ]
}
{% endschema %}