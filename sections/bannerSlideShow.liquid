<!-- start banner -->
<section class="banner-slider">
    <div class="container p-relative">
        <div class="swiper banner-slide">
            <!-- Additional required wrapper -->
            <div class="swiper-wrapper">
              <!-- Slides -->
                <div class="swiper-slide">
                    <img src="./assets/images/slideshow_1.jpg" alt="Slide1" class="slide-img">
                    <div class="slide-des">
                        <div class="slide-text">
                            <div class="caption">
                                <h2 class="title">CHERNER<span>ARMCHAIR</span></h2>
                                <p>The 1958 moulded plywood armchair by Norman Cherner</p> 
                                <div class="text"><a href="#">View now</a></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="swiper-slide">
                    <img src="./assets/images/slideshow_2.jpg" alt="Slide2" class="slide-img">
                    <div class="slide-des">
                        <div class="slide-text">
                            <div class="caption">
                                <h2 class="title"><span>crexel</span> Furniture</h2>
                                <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry.</p>
                                <div class="text"><a href="#">View now</a></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="swiper-slide">
                    <img src="./assets/images/slideshow_3.jpg" alt="Slide3" class="slide-img">
                    <div class="slide-des text-center">
                        <div class="slide-text">
                            <div class="caption">
                                <h2 class="title"><span>LIGHTING</span></h2>
                                <p>It is a long established fact that a reader will be distracted</p> 
                                <div class="text"><a href="#">View now</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- If we need navigation buttons -->
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
        </div>
        <div id="banner-bullet" class="swiper-pagination"></div>
    </div>
</section> 

{% schema %}
{
   "name": "Slideshow",
  "blocks": [
    {
       "type": "slideshow",
      "name": "Slide",
      "settings": [
        {
           "type": "image_picker",
           "id": "image",
           "label": "Slide Image"
        }
      ]
    }
  ]
}
{% endschema %}